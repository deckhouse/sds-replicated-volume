{{- define "vex mitigation" }}
  {{- $context := index . 0 }}
  {{- $imageName := index . 1 }}
---
image: vex-artifact
fromImage: base/vex
final: true

{{ printf "image: %s" $context | nindent 2 }}
{{ printf "image: %s-vex-artifact" $imageName | nindent 2 }}

git:
- add: /images/{{ $imageName }}/known_vulnerabilities.vex
  to: /known_vulnerabilities.vex
  stageDependencies:
    install:
    - "**/*"
{{- end }}
